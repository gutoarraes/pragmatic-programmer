<section class="movie-details">
  <div class="image">
    <%= image_tag @movie.image_file_name %>
  </div>
  <% if current_user %>
    <div class="faves">
      <%= fave_or_unfave_button(@movie, @favorite) %>
      <div class="count">
        <%= @fans.size %>
      </div>
    </div>
  <% end %>
  <div class="details">
    <h1><%= @movie.title %></h1>
    <h2>
      <%= year_of(@movie) %> &bull; <%= @movie.rating %>
      <div class="reviews" >
      <%= average_stars(@movie) %>  &bull;
        <%= link_to pluralize(@movie.reviews.size, "review"), movie_reviews_path(@movie) %>
      </div>
    </h2>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Director:</th>
        <td><%= @movie.director %></td>
      </tr>
      <tr>
        <th>Duration:</th>
        <td><%= @movie.duration %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
    </table>
    <div class="review"> <%= link_to "Write Review", new_movie_review_path(@movie) %> </div>
  </div>
  <aside>
  <% if @fans.present? %>
    <h4>Fans</h4>
    <ul>
      <% @fans.each do |user| %>
        <li>
          <%= link_to user.name, user %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <% if @genres.present? %>
  <h4> Genres </h4>
  <ul>
    <% @genres.each do |genre| %>
      <%= genre.name %> <br>
    <% end %>
  <% end %>
</aside>
</section>
<% if current_user_admin? %>
  <section class="admin">
    <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
    <%= link_to "Delete", movie_path(@movie), class: "button", data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this movie?"} %>
  </section>
<% end %>


